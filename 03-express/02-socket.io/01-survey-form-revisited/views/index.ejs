<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Survey Form</title>
    <link rel="stylesheet" type="text/css" href="css/style.css">
	  <script src= 'https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js'></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
    <script type="text/javascript" src="/socket.io/socket.io.js"></script>
    <script type ="text/javascript">
      $(document).ready(function (){
          var socket = io(); //1
          $("form").submit(function(event){
              event.preventDefault();
              $('#socket').show()
              msg = [];
              $(".input").each(function(){
                  msg.push($(this).val());
                  console.log(msg)
              });
              socket.emit('posting_form', msg); //6
              socket.on('updated_message', function (data) { //4
                  console.log(data.msg, "aaaaaa"); //5
                  $("#1").text('You emitted the following information to the server: '+data.msg+'');
              });
              socket.on('random_number', function (data) { //4
                  console.log(data.msg, "yyyyyyyyyy"); //5
                  $('#2').text('Your lucky number emitted by the server is '+data.msg+'');
              });
          });
      })
  </script>
</head>
<body>
	<div class="container">
        <h1>Survey Form</h1>
        <div id="socket">
            <p id="1"></p>
            <p id="2"></p>
        <form action="/result" method="post">
            <div>
              <label for="name">Your Name:</label>
              <input type="text" class="form-control" name="name">
            </div>
            <div>
              <label for="location">Dojo Location</label>
                <select class="form-control" name="location">
                  <option>Please select a location</option>
                  <option value="Mountain View">Mountain View</option>
                  <option value="Chicago">Chicago</option>
                  <option value="Online">Online</option>
                  <option value="Silicon Valley">Silicon Valley</option>
                </select>
            </div>
            <div>
              <label for="language">Favorite Language</label>
              <select class="form-control" name="language">
                <option>Please select a language</option>
                <option value="Javascrip">Javascript</option>
                <option value="Python">Python</option>
                <option value="C++">C++</option>
                <option value="HTML">HTML</option>
              </select>
            </div>
              <div>
                <label for="comment">Comment (optional)</label>
                <textarea class="form-control" name="comment" rows="3"></textarea>
                <button type="submit">Submit</button>
              </div>
            </form>
    </div>
</body>
</html>